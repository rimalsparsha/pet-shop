<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> PET SHOP </title>

    <!-- css link -->
    <link rel="stylesheet" type="text/css" href="../css/index.css">

    
</head>
<body>
    
    <div class="navigation">
        <div class="menuToggle"></div>

        <ul>

            <!-- Home -->
            <li class="list active" style="--clr:#f44336">
                <a href="/">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="text"> Home </span>
                </a>
            </li>

            <!-- Pet Shop -->
            <li class="list" style="--clr:#ffa117">
                <a href="/petshop">
                    <span class="icon"><ion-icon name="logo-octocat"></ion-icon></span>
                    <span class="text"> Pet Shop </span>
                </a>
            </li>

            <!-- Cart -->
            <li class="list" style="--clr:#0fc70f">
                <a href="#">
                    <span class="icon"><ion-icon name="cart-outline"></ion-icon></span>
                    <span class="text"> Cart </span>
                </a>
            </li>

            <!-- Profile -->
            <li class="list" style="--clr:#2196f3">
                <a href="/profile">
                    <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                    <span class="text"> <%= data.name %> </span>
                </a>
            </li>

            <!-- Logout -->
            <li class="list" style="--clr:#b145e9">
                <a href="/logout">
                    <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                    <span class="text"> Logout </span>
                </a>
            </li>

        </ul>

    </div>





</body>
</html>


<script>
    const menuToggle = document.querySelector('.menuToggle');
    const navigation = document.querySelector('.navigation');
    menuToggle.onclick = function(){
        navigation.classList.toggle('open')
    }


    const list = document.querySelectorAll('.list');
    function activeLink(){
        list.forEach((item) =>
        item.classList.remove('active'));
        this.classList.add('active');
    }
    list.forEach((item) =>
    item.addEventListener('click',activeLink))

</script>

<!-- Link for icon -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
